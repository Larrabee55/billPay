<div id="content-container">
  <table id="bill-table">
    <tr>
      <th><b>Receipt Name</b></th>
      <th><b>Amount</b></th>
      <th><b>Category</b></th>
      <th> </th>
    </tr>
    <div class="flex-container" id="button-flex">

      {{#each userReceipts}}
      {{#if user_id}}
      {{>receipts/receipts-block}}
      {{/if}}
      {{/each}}
    </div>
  </table>

  <table id="add-bill-table">
    <tr>
      <th>Add Receipt Name</th>
      <th>Add Amount</th>
      <th>Add Category</th>
    </tr>
    <tr id="new-bill-row">
      <form id="bill-form"></form>
      <th>
        <input type="text" id="receipt-name" name="bill">
      </th>
      <th>
        <input type="number" id="amount">
      </th>
      <th>
        <input type="text" id="category">
      </th>
      </form>
    </tr>
  </table>
  <div id="new-receipt-button" class="button">+</div>

  <table id="total-table">
    <tr>
      <th width="372px"><b>Total:</b></th>
      <th width="207px" id="totals">${{userReceiptsTotal}}</th>
    </tr>
  </table>

</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/index.js"></script>